    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "helmet": "^8.1.0",
    "pinia": "^3.0.3",
    "sirv": "^3.0.1",
    "tailwindcss": "^4.1.11",
    "vue-router": "^4.5.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
