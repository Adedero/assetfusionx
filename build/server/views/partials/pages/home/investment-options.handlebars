<div class="px-12 pt-4 pb-12 grid grid-cols-5 items-center gap-5">
  <div class="gap-5 col-span-3 overflow-y-hidden">
    <div class="grid grid-cols-2 items-center gap-2 w-full">
      {{#each investmentOptions}}
        <div class="p-4 bg-slate-800/50 border border-slate-700 bg-gradient-t-b from-primary/50 rounded-xl">
          <header class="flex items-center gap-2">
            <div class="w-8 h-8 border border-tertiary-500/50 bg-gradient-to-b from-primary-500/40 rounded-lg grid place-content-center">
              <iconify-icon icon="{{ this.icon }}"></iconify-icon>
            </div>
            <p class="font-semibold">{{ this.name }}</p>
          </header>

          <div class="mt-2 text-sm">
            <p class="truncate">{{ this.description }}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="pt-4 pb-12 col-span-2">
    <div class="text-5xl">
      <h2>{{ data.investmentOptions.title }}</h2>
    </div>

    <div class="mt-6">
      <p class="text-slate-300">{{ data.investmentOptions.description }}</p>
    </div>

    <div class="mt-6">
      <img src="/img/investment.gif" class="rounded-xl h-48 object-cover" />
    </div>
  </div>
</div>