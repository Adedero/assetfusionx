<div class="grid grid-cols-2 gap-5 px-8 pt-20 items-center">
  <div class="space-y-4">
    <div class="w-fit py-1.5 px-3 rounded-full border border-slate-700 bg-slate-800/40 backdrop-blur-lg flex items-center gap-2">
      <iconify-icon icon="lucide:command"></iconify-icon>
      <p class="text-xs">
        {{ data.hero.tagline }}
      </p>
    </div>

    <div class="h-60 grid items-end">
      <h1 
        id="typewriter" 
        data-text="{{ data.hero.title }} | Choose your investment. We handle the rest. | Multiply your assets with our solid investment plans. | Everything made ridiculously easy with {{ app.name }}." 
        class="text-6xl"
      >
        {{ data.hero.title }}
      </h1>
    </div>

    <p class="text-slate-300">
      {{ data.hero.description }}
    </p>

    <div class="flex items-center gap-4">
      <button class="btn primary rounded-full py-2!">
        <iconify-icon icon="lucide:rocket"></iconify-icon>
        <p class="text-sm">Get Started</p>
      </button>

      <button class="btn text-primary-500 hover:underline py-2!">
        <iconify-icon icon="lucide:rocket"></iconify-icon>
        <p class="text-sm">About Us</p>
      </button>
    </div>
  </div>

  <div class="grid">
    <img src="/img/buildings.gif" class="rounded-2xl" />
  </div>
</div>